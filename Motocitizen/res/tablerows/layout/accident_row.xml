<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/accident_row_outer"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/message_row"
    >

    <TextView
        android:id="@+id/accident_row_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"/>

    <TextView
        android:id="@+id/accident_row_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/accident_row_unread"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:textStyle="bold"/>
</FrameLayout>