<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/row"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="2dp"
             android:layout_marginEnd="4dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="4dp"
             android:layout_marginStart="16dp"
             android:layout_marginTop="2dp"
             android:background="@drawable/owner_message_row"
    >

    <TextView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rjhdby"
        android:textColor="#00FFFF"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="10"
        android:singleLine="false"
        android:text="\nЭто было очень давно, когда я учился классе в десятом. Среди довольно скудного в научном плане фонда районной библиотеки мне попалась книга — Угаров В. А."/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:text="12:38"
        android:textColor="@color/material_blue_grey_950"/>
</FrameLayout>