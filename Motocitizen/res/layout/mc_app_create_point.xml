<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mc_create_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0"
            android:stretchColumns="1,2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/what"
                android:textColor="#0000A0" />

            <TextView
                android:id="@+id/mc_create_what"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000A0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/where"
                android:textColor="#0000A0" />

            <TextView
                android:id="@+id/mc_create_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000A0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0e0e0" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/when"
                android:textColor="#0000A0" />

            <TextView
                android:id="@+id/mc_create_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000A0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/reported"
                android:textColor="#0000A0" />

            <TextView
                android:id="@+id/mc_create_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000A0" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/mc_create_main_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/mc_create_type_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/accListYesterdayLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/mc_create_type_header"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/mc_create_type_other_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_type_other_button" />

            <Button
                android:id="@+id/mc_create_type_steal_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_type_steal_button" />

            <Button
                android:id="@+id/mc_create_type_break_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_type_break_button" />

            <Button
                android:id="@+id/mc_create_type_acc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_type_acc_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mc_create_acc_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mc_create_type_header"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/mc_create_acc_mm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_acc_mm_button" />

            <Button
                android:id="@+id/mc_create_acc_mp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_acc_mp_button" />

            <Button
                android:id="@+id/mc_create_acc_solo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_acc_solo_button" />

            <Button
                android:id="@+id/mc_create_acc_ma_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_acc_ma_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mc_create_people_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mc_create_people"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/mc_create_people_death_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_people_death_button" />

            <Button
                android:id="@+id/mc_create_people_hard_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_people_hard_button" />

            <Button
                android:id="@+id/mc_create_people_light_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_people_light_button" />

            <Button
                android:id="@+id/mc_create_people_ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_people_ok_button" />

            <Button
                android:id="@+id/mc_create_people_na_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mc_create_people_na_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mc_create_final_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/details"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/mc_create_final_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@android:color/background_dark"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="8" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <Button
            android:id="@+id/mc_create_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/mc_create_cancel" />

        <Button
            android:id="@+id/mc_create_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:enabled="false"
            android:text="@string/mc_create_back_button" />

        <Button
            android:id="@+id/mc_create_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:enabled="false"
            android:text="@string/mc_create_create" />
    </LinearLayout>

</LinearLayout>