<LinearLayout
    android:id="@+id/det_volunteers"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="motocitizen.fragments.DetailVolunteersFragment">

    <ListView
        android:id="@+id/volunteerList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/onway_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/onway_button"
            android:src="@drawable/onway"
            android:text="@string/onway_button"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/onway_cancel_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/onway_cancel_button"
            android:src="@drawable/onway_cancel"
            android:text="@string/onway_cancel_button"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/onway_disabled_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/onway_cancel_button"
            android:src="@drawable/onway_disabled"
            android:text="@string/onway_cancel_button"
            android:visibility="gone"/>

        <Button
            android:id="@+id/details_to_map_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/to_map"/>
    </LinearLayout>
</LinearLayout>
