<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/det_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="mc_det_messages_content"
    android:weightSum="1"
    tools:context="motocitizen.Activity.DetailMessagesFragment">

    <ScrollView
        android:id="@+id/mc_det_messages_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="mc_det_messages_content">

        <TableLayout
            android:id="@+id/mc_det_messages_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="2"
            android:stretchColumns="2" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/mc_new_message_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mc_new_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:lines="1">

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/mc_new_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:enabled="false"
            android:minWidth="90dp"
            android:nestedScrollingEnabled="false"
            android:src="@android:drawable/ic_menu_send"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
