<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/select_sound_fragment"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="motocitizen.fragments.SelectSoundFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/sound_select_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="1">

        <Button
            android:id="@+id/select_sound_cancel_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/mc_create_cancel"/>

        <Button
            android:id="@+id/select_sound_save_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/settings_confirm_button"/>
    </LinearLayout>
</LinearLayout>
